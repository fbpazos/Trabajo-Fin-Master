    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // run tests at test/__init__.py
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/__init__.py",
            //"console": "externalTerminal",
            "console": "internalConsole",
            "justMyCode": true
        }, 
        
        // Run testa and Sonarscanner.bat
        {
            "name": "Tests and Sonar",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/__init__.py",
            "console": "internalConsole",
            "justMyCode": true,
            "postDebugTask": "Sonar",
        }
        

    ]
}